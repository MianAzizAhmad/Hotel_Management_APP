<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="3dp">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/appview">


        <TextView
            android:id="@+id/CrRoomInfo"
            android:layout_width="wrap_content"
            android:layout_height="29dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="49dp"

            android:layout_marginLeft="30dp"
            android:layout_marginTop="72dp"
            android:text="Room ID : "
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/CrRoom"
            android:layout_width="wrap_content"
            android:layout_height="29dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="75dp"

            android:text="Empty  "
            android:textSize="25sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/DimInfo"
            android:layout_width="wrap_content"
            android:layout_height="29dp"
            android:layout_below="@+id/CrRoomInfo"

            android:layout_marginLeft="30dp"
            android:layout_marginTop="18dp"
            android:text="Dimensions :"
            android:textSize="25sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/Dim"
            android:layout_width="wrap_content"
            android:layout_height="29dp"
            android:layout_below="@+id/CrRoom"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="16dp"
            android:text=" Empty "

            android:textSize="25sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/ACinfo"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@+id/DimInfo"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="16dp"
            android:text=" AC : "

            android:textSize="25sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/AC"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@+id/Dim"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="15dp"
            android:text=" Empty "

            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/wifiinfo"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@+id/ACinfo"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="12dp"
            android:text=" Wifi : "

            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/wifi"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@+id/AC"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="12dp"
            android:text=" Empty "

            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="241dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="left|center_vertical"
            android:layout_marginStart="90dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="73dp"
            android:layout_marginRight="73dp"
            android:text="Room Info"
            android:textColor="@color/purple_500"
            android:textSize="35sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/Ratings"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@+id/wifiinfo"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="15dp"
            android:text=" Ratings : "

            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/RentingsInfo"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@+id/wifi"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="14dp"
            android:text=" Empty "

            android:textSize="25sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="305dp"

            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="317dp"
            android:layout_marginEnd="0dp" />

        <Button
            android:id="@+id/RENTROOM"
            android:layout_width="303dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="620dp"
            android:layout_marginEnd="51dp"
            android:onClick="bookroom"
            android:text="Rent Room" />

        <ProgressBar
            android:id="@+id/progressBar2"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageView"
            android:layout_alignBottom="@+id/imageView"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="171dp"
            android:layout_marginTop="124dp"
            android:layout_marginEnd="183dp"
            android:layout_marginBottom="133dp" />


    </RelativeLayout>


</androidx.cardview.widget.CardView>